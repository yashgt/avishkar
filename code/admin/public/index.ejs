<body ng-controller="RouteController">

    <div cg-busy="hangOn">
        <div flash-alert active-class="in alert" class="alert fade" align="right">
            <span class="alert-message">{{flash.message}}</span>
        </div>
		<table><tr>
		<td><ny-fleet-choice ny-fleet="fleet" ny-fleets="fleets"></ny-fleet-choice></td>
		<td>{{fleetDetail.routes.length}} routes | {{fleetDetail.allstops.length}} stops | {{fleetDetail.trip_cnt}} trips</td>
		<td><div align="right">Logged in as <%= user.username %>, <% if(user.role==1 ) { %>Fleet Administrator<% } else { %>Super Admin <% }%> <a href='/logout'>Logout</a></div></td>
		
		</tr></table>        
		
                    <!-- Subscribe to all flash messages. TODO : Do what is done at http://embed.plnkr.co/zXGEKw/preview -->


                    <tabset vertical="false" justified="false">
                        <tab heading="Plan">
                            
									<div class="col-md-2">
                                    <tabset vertical="false" justified="false">
                                        <tab heading="Routes">
                                        <div ui-grid="routeListOptions" ui-grid-pagination ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize class="routelist"></div>
                                        </tab>
                                            <tab heading="Stops">
                                        <div ui-grid="stopListOptions" ui-grid-selection ui-grid-resize-columns ui-grid-auto-resize class="routelist"></div>
                                        </tab>
                                    </tabset>  
									</div>
                                  

									<div class="col-md-8">
                                        <div id="route" style="width:100%">

                                            Route options:
                                            <button type="button" ng-click="newRoute()" class="btn btn-primary btn-xs" ng-disabled="isRouteDirty">New</button>
                                            <button type="button" ng-click="extendRoute()" class="btn btn-primary btn-xs" ng-disabled="isRouteDirty || routeDetail.routeId<=e0">Extend</button>
                                            <button type="submit" ng-click="saveRoute()" class="btn btn-primary btn-xs" ng-disabled="!isRouteDirty">Save</button>
                                            <button type="submit" ng-click="closeRoute()" class="btn btn-primary btn-xs" ng-disabled="routeDetail.routeId < 0 ">Close</button>

                                            <div ng-show="routeDetail.routeId>=0" >
						Route ID: {{routeDetail.routeId}}
                                            
                                            <md-input-container>
                                            <label>Via</label>
        <md-select md-on-close="routeDetail.isDirty=true;" ng-model="routeDetail.viaStages" multiple>
            <md-option ng-value="stage.stageId" ng-repeat="stage in routeDetail.stages">{{stage.title}}</md-option>
        </md-select>
         </md-input-container>
                                                   
                                            
 <md-chips class="custom-chips" placeholder="Names of routes" ng-model="routeDetail.internalRouteCode" readonly="false" md-removable="true" md-enable-chip-edit="true" md-on-add="routeDetail.isDirty = true;" md-on-remove="routeDetail.isDirty = true;" class="md-no-underline"></md-chips>

                                            
                                            </div>
<!--
											<div style="vertical-align:top"><font size="0.5">Zoom: {{fleetDetail.zoom}} Center: {{fleetDetail.center.latitude}},{{fleetDetail.center.longitude}} Bounds: NE({{fleetDetail.bounds.northeast.latitude}},{{fleetDetail.bounds.northeast.longitude}}) SW({{fleetDetail.bounds.southwest.latitude}},{{fleetDetail.bounds.southwest.longitude}})</font></div>-->
                                        </div>
                                        <tabset vertical="false" justified="false">
                                            <tab heading="Map">
                                                
                                                <ui-gmap-google-map class="span7" events="mapEvents" zoom="fleetDetail.zoom" center="fleetDetail.center" draggable="true" bounds="map.bounds" pan="true" control="map.control" options="mapOptions">

                                                    <ny-ui-gmap-control gmap="gmap" bounds="fleetDetail.bounds"></ny-ui-gmap-control>

                                                    <ui-gmap-window ng-if="stopDetail" show="map.infoWindow.show" coords="stopDetail" isIconVisibleOnClick="false" ng-cloak>
                                                        <div>
                                                            <form name="stop_form" ng-controller="StopController as S" ng-submit="saveStop()" novalidate>
																<p>Stop ID : {{ S.getStopDetail().id }}</p>
                                                                <p>Location : {{ S.getStopDetail().latitude | number:4 }}, {{ S.getStopDetail().longitude | number:4 }}</p>																
                                                                <br/>
                                                                <input type="text" name="stopName" ng-model="S.getStopDetail().name" ng-required="true" autofocus />
                                                                <br/>
                                                                <textarea ng-model="S.getStopDetail().address" placeholder="Stop Address"></textarea>
                                                                <br/>
                                                                <button type="submit" ng-disabled="stop_form.$invalid">Save</button>
                                                            </form>
                                                        </div>
                                                    </ui-gmap-window>

                                                    <ui-gmap-markers doCluster="false" models="fleetDetail.stops" coords="'self'" icon="'icon'" click="'onClicked'" options="'options'" events="stopEvents" labelContent="'name'" control="markersControl">
                                                    </ui-gmap-markers>
                                                    <!--
													<ui-gmap-window show="true" coords="currentStop" isIconVisibleOnClick="false" ng-cloak>
														{{currentStop.name}}
													</ui-gmap-window>-->


                                                </ui-gmap-google-map>

                                            </tab>
                                            <!--Map tab ends -->
                                            <tab heading="Schedule" disable="routeDetail.routeId<0">
												<% [0,1].forEach(function(dir){ %>
												<div >
                                                <button class="btn btn-primary btn-xs" ng-click="addTrip(<%= dir %>)">
													<span class="glyphicon glyphicon-plus"></span>Add <%= dir==0 ? "Onward" : "Return" %> Trip
												</button>
												<button class="btn btn-danger btn-xs" ng-click="deleteTrips(<%= dir %>)" ng-disabled="scheduleOptions[<%= dir %>].selectedRows.length==0" >
													<span class="glyphicon glyphicon-trash"></span>Delete Trips
												</button>
												<button class="btn btn-success btn-xs" ng-click="autocompleteTrips(<%= dir %>)" ng-disabled="scheduleOptions[<%= dir %>].selectedRows.length==0 && routeDetail ">
													<span class="glyphicon glyphicon-arrow-right"></span>Autocomplete Trips
												</button>
	
                                                <div class="sched-grid" ui-grid="scheduleOptions[<%= dir %>]" external-scopes="scheduleActions" ui-grid-pinning ui-grid-edit ui-grid-cellNav ui-grid-auto-resize ui-grid-resize-columns ui-grid-selection></div>
												</div>
                                                <% }) %>
                                            </tab>
                                            <tab heading="Fares" select="showFares()" disabled="routeDetail.routeId<0">
                                                <div ui-grid="fareGridOptions" ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-auto-resize ui-grid-resize-columns></div>
                                            </tab>
                                            <tab heading="Object" >
                                                <pre class="code">{{ routeDetail | json }}</pre>
                                            </tab>
                                            
                                        </tabset>
									</div>	
                                    
									<div class="col-md-2">
                                        <div ng-disabled="routeDetail.routeId<0" class="stagetree">
                                            <tabset>
                                                <tab heading="Onward">
                                                    <div ui-tree="stageTreeOptions" >
                                                        <!-- for existing stages -->
                                                        <ol ui-tree-nodes ng-model="routeDetail.stages" data-type="group">
                                                            <li ng-repeat="stage in routeDetail.stages" ui-tree-node data-type="stage" >
                                                                <div class="group-title angular-ui-tree-handle" ng-show="!stage.editing"  ng-class="{'chosen_stage':currentStage==stage}">
                                                                    <a href="" class="btn btn-primary btn-xs pull-right" data-nodrag ng-click="chooseStage(stage);"><i class="glyphicon glyphicon-pushpin"></i></a>
                                                                    <a href="" class="btn btn-danger btn-xs pull-right" data-nodrag ng-click="removeStage(stage)" ng-show="stage.stops.length==0"><i class="glyphicon glyphicon-remove"></i></a>
                                                                    <a href="" class="btn btn-primary btn-xs pull-right" data-nodrag ng-click="stage.editing=true; routeDetail.isDirty = true;"><i class="glyphicon glyphicon-pencil"></i></a>
                                                                    <div>{{stage.title}}</div>
                                                                </div>
                                                                <div class="group-title angular-ui-tree-handle" data-nodrag ng-show="stage.editing">
                                                                    <form class="form-inline" role="form" name="stage_{{stage.stageId}}">
                                                                        <div class="form-group">
                                                                            <label class="sr-only" for="title">Stage name</label>
                                                                            <input type="text" class="form-control" placeholder="Stage name" ng-model="stage.title" ng-required="true">
                                                                        </div>
                                                                        <button type="submit" class="btn btn-default" ng-click="stage.editing=false">Save</button>
                                                                        <button type="submit" class="btn btn-default" ng-click="stage.editing=false">Cancel</button>
                                                                    </form>
                                                                </div>
                                                                <ol ui-tree-nodes ng-model="stage.stops" data-type="stage">
                                                                    <li ng-repeat="stop in stage.stops" ui-tree-node data-type="stop">
                                                                        <div class="category-title angular-ui-tree-handle">
                                                                            <!--<a href="" class="btn btn-danger btn-xs pull-right" data-nodrag ng-click="removeCategory(stage, stop)"><i class="glyphicon glyphicon-remove"></i></a>-->
                                                                            <div>
                                                                                {{stop.onwardStop.name}}
																				<a href="" class="btn btn-danger btn-xs pull-right" data-nodrag ng-click="removeRouteStop(stop)" ><i class="glyphicon glyphicon-remove"></i></a>
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                </ol>
                                                            </li>
                                                        </ol>
                                                        <ol class="angular-ui-tree-nodes">
                                                            <li class="angular-ui-tree-node">
                                                                <div class="group-title angular-ui-tree-handle">
                                                                    <form class="form-inline" role="form" name="newstage_form">
                                                                        <div class="form-group">
                                                                            <label class="sr-only" for="title">Stage name</label>
                                                                            <input type="text" class="form-control" id="stageName" ng-model="newStage.title" placeholder="Stage name" ng-required="true">
                                                                        </div>
                                                                        <button type="submit" class="btn btn-default" ng-click="addNewStage()" ng-disabled="newstage_form.$invalid || routeDetail.routeId<0">Add Stage</button>
                                                                    </form>
                                                                </div>
                                                            </li>
                                                        </ol>
                                                    </div>
                                                </tab>
                                                <tab heading="Return">
                                                    <div ui-tree="stageTreeOptions" >
                                                        <!-- for existing stages -->
                                                        <ol ui-tree-nodes ng-model="routeDetail.stages" data-type="group">
                                                            <li ng-repeat="stage in routeDetail.stages | reverse" ui-tree-node>
                                                                <div class="group-title angular-ui-tree-handle" ng-show="!stage.editing">
                                                                    <a href="" class="btn btn-danger btn-xs pull-right" data-nodrag ng-click="removeGroup(stage)" ng-show="stage.stops.length>0"><i class="glyphicon glyphicon-remove"></i></a>
                                                                    <a href="" class="btn btn-primary btn-xs pull-right" data-nodrag ng-click="stage.editing=true"><i class="glyphicon glyphicon-pencil"></i></a>
                                                                    <div>{{stage.title}}</div>
                                                                </div>
                                                                <div class="group-title angular-ui-tree-handle" data-nodrag ng-show="stage.editing">
                                                                    <form class="form-inline" role="form">
                                                                        <div class="form-group">
                                                                            <label class="sr-only" for="title">Stage name</label>
                                                                            <input type="text" class="form-control" placeholder="Stage name" ng-model="stage.title">
                                                                        </div>
                                                                        <button type="submit" class="btn btn-default" ng-click="stage.editing=false">Save</button>
                                                                        <button type="submit" class="btn btn-default" ng-click="stage.editing=false">Cancel</button>
                                                                    </form>
                                                                </div>
                                                                <ol ui-tree-nodes ng-model="stage.stops" data-type="stage">
                                                                    <li ng-repeat="stop in stage.stops | reverse" ui-tree-node data-type="stop">
                                                                        <div class="category-title angular-ui-tree-handle">
                                                                            <!--<a href="" class="btn btn-danger btn-xs pull-right" data-nodrag ng-click="removeCategory(stage, stop)"><i class="glyphicon glyphicon-remove"></i></a>-->
                                                                            <div>
                                                                                {{stop.returnStop.name}}
                                                                            </div>
                                                                        </div>
                                                                    </li>
                                                                </ol>
                                                            </li>
                                                        </ol>
                                                        <ol class="angular-ui-tree-nodes">
                                                            <li class="angular-ui-tree-node">
                                                                <div class="group-title angular-ui-tree-handle">
                                                                    <form class="form-inline" role="form">
                                                                        <div class="form-group">
                                                                            <label class="sr-only" for="title">Stage name</label>
                                                                            <input type="text" class="form-control" id="stageName" ng-model="newStage.title" placeholder="Stage name">
                                                                        </div>
                                                                        <button type="submit" class="btn btn-default" ng-click="addNewStage()" ng-disabled="newstage_form.$invalid || routeDetail.routeId<0">Add Stage</button>
                                                                    </form>
                                                                </div>
                                                            </li>
                                                        </ol>
                                                    </div>
                                                </tab>
                                            </tabset>
                                        </div>
									</div>
									
                        </tab>
                        <tab heading="Calendars">
                            <button ng-click="addCalendar()" class="btn btn-default">Add</button>
                            <button ng-click="saveCalendars()" class="btn btn-default">Save</button>
                            <div ui-grid="calendarOptions" ui-grid-edit ui-grid-row-edit ui-grid-cellNav ui-grid-auto-resize></div>
                        </tab>
                        <tab heading="GTFS" >
                        <button type="button" ng-click="makegtfs()" class="btn btn-primary btn-xs">Make GTFS</button>
                        <iframe id="gtfsiframe" ng-src={{valurl}} height="600" width="100%"></iframe>
                        </tab>
                    </tabset>
    </div>
